<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/alertMessage"
        android:layout_gravity="center_horizontal"
        android:text="alert message" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollViewRule"
        android:layout_gravity="center_horizontal" >


        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            xmlns:android="http://schemas.android.com/apk/res/android"

            android:id="@+id/grid">

            <Spinner
                android:layout_width="187dp"
                android:layout_height="wrap_content"
                android:id="@+id/devgroup1"
                android:layout_row="0"
                android:layout_column="0"
                android:spinnerMode="dropdown" />

            <Spinner
                android:layout_width="183dp"
                android:layout_height="wrap_content"
                android:id="@+id/propert1"
                android:layout_row="0"
                android:layout_column="1"
                android:spinnerMode="dropdown" />

            <Spinner
                android:layout_width="373dp"
                android:layout_height="wrap_content"
                android:id="@+id/condition"
                android:layout_row="1"
                android:layout_column="0"
                android:spinnerMode="dropdown"
                android:layout_columnSpan="2" />

            <Spinner
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:id="@+id/devgroup2"
                android:layout_row="2"
                android:layout_column="0"
                android:spinnerMode="dropdown" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OR input a"
                android:id="@+id/textView"
                android:layout_column="0"
                android:layout_row="3"
                android:layout_columnSpan="2"
                android:textSize="18dp"
                android:layout_gravity="center_horizontal" />

            <Spinner
                android:layout_width="183dp"
                android:layout_height="wrap_content"
                android:id="@+id/propert2"
                android:layout_row="2"
                android:layout_column="1"
                android:spinnerMode="dropdown" />

            <EditText
                android:layout_width="372dp"
                android:layout_height="wrap_content"
                android:id="@+id/dateorvalue"
                android:layout_row="4"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:text="value " />

            <Button
                android:layout_width="373dp"
                android:layout_height="50dp"
                android:text="Submit"
                android:id="@+id/ok"
                android:layout_row="5"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:background="#abb865" />

        </GridLayout>
     </ScrollView>

</LinearLayout>